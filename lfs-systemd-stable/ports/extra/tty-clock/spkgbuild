# description	: Digital clock in ncurses
# homepage	: http://github.com/xorg62/tty-clock
# maintainer	: Emmett1, emmett1.2miligrams at gmail.com
# depends	: ncurses

name=tty-clock
version=2.3
release=1
source=(https://github.com/xorg62/tty-clock/archive/v$version.tar.gz)

build() {
	cd $name-$version
	make
	install -Dm755 $name $PKG/usr/bin/$name
	install -Dm655 tty-clock.1 $PKG/usr/share/man/man1/tty-clock.1
}

