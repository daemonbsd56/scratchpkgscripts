# description	: Python module that implements caching and sessions WSGI middleware for use with web applications and stand-alone Python scripts and applications
# homepage	: http://beaker.groovie.org/
# maintainer	: emmett1, emmett1.2miligrams at gmail.com
# depends	: python2

name=python2-beaker
version=1.9.0
release=1
source=(https://pypi.python.org/packages/93/b2/12de6937b06e9615dbb3cb3a1c9af17f133f435bdef59f4ad42032b6eb49/Beaker-$version.tar.gz)

build() {
	cd Beaker-$version

	python2 setup.py install --root=$PKG --optimize=1
}