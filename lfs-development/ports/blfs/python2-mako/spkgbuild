# description	: Python module that implements hyperfast and lightweight templating for the Python platform
# homepage	: http://www.makotemplates.org/
# maintainer	: emmett1, emmett1.2miligrams at gmail.com
# depends	: python2-beaker python2-markupsafe

name=python2-mako
version=1.0.4
release=1
source=(https://pypi.python.org/packages/source/M/Mako/Mako-$version.tar.gz)

build() {
	cd Mako-$version

  	python2 setup.py install --root=$PKG --optimize=1
}