# description	: Management tools and libraries relating to cryptography
# homepage	: https://www.openssl.org/
# maintainer	: emmett1, emmett1.2miligrams at gmail.com

name=openssl
version=1.1.0f
release=1
source=(https://openssl.org/source/$name-$version.tar.gz)

build() {
	cd $name-$version

  	unset MAKEFLAGS
  	./config --prefix=/usr         \
	         --openssldir=/etc/ssl \
	         --libdir=lib          \
	         shared                \
	         zlib-dynamic
	make depend
	make -j1

	sed -i 's# libcrypto.a##;s# libssl.a##' Makefile

	make DESTDIR=$PKG MANDIR=/usr/share/man MANSUFFIX=ssl install
	mv -v $PKG/usr/share/doc/$name{,-$version}
	cp -vfr doc/* $PKG/usr/share/doc/$name-$version
}