# description	: An old version of Autoconf
# homepage	: http://www.gnu.org/software/autoconf/
# maintainer	: emmett1, emmett1.2miligrams at gmail.com

name=autoconf-2.13
version=2.13
release=1
source=(http://ftp.gnu.org/gnu/autoconf/autoconf-$version.tar.gz
	http://www.linuxfromscratch.org/patches/blfs/svn/autoconf-$version-consolidated_fixes-1.patch)

build() {
	cd $name

  	patch -Np1 -i ../$name-consolidated_fixes-1.patch || exit 1
	mv -v autoconf.texi autoconf213.texi
	rm -v autoconf.info
	./configure --prefix=/usr --program-suffix=2.13
	make
	make DESTDIR=$PKG install
}

