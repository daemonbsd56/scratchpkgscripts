# description	: Provides Error/exception handling in an object-oriented way
# homepage	: http://search.cpan.org/dist/Error/
# maintainer	: emmett1, emmett1.2miligrams at gmail.com
# depends	: perl

name=perl-error
version=0.17024
release=1
source=(http://www.cpan.org/authors/id/S/SH/SHLOMIF/Error-$version.tar.gz)

build() {
	cd Error-$version

	perl Makefile.PL INSTALLDIRS=vendor
	make DESTDIR=$PKG install

	find $PKG \( -name perllocal.pod -o -name .packlist \) -delete
}

