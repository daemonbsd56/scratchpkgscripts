# description	: Various utilities for controlling sound card
# homepage	: http://www.alsa-project.org/
# maintainer	: Emmett1, emmett1.2miligrams at gmail.com
# depends	: alsa-lib

name=alsa-utils
version=1.1.4
release=1
source=(ftp://ftp.alsa-project.org/pub/utils/$name-$version.tar.bz2
	http://anduin.linuxfromscratch.org/BLFS/blfs-bootscripts/blfs-bootscripts-20170731.tar.xz)

build() {
	cd $name-$version

	./configure --disable-alsaconf \
	            --disable-bat   \
	            --disable-xmlto \
	            --with-curses=ncursesw
	make
	make DESTDIR=$PKG install

	cd ../blfs-bootscripts-20170731

	make DESTDIR=$PKG install-alsa
}
