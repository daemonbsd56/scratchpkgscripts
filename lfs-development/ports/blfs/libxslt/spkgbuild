# description	: XSLT libraries used for extending libxml2 libraries to support XSLT files
# depends	: libxml2 libgcrypt
# makedepends	: python2

name=libxslt
version=1.1.31
release=1
source=(http://xmlsoft.org/sources/$name-$version.tar.gz)

build() {
	cd $name-$version

	sed -i s/3000/5000/ libxslt/transform.c doc/xsltproc.{1,xml}
	sed -i '/WITH_MODULES=.*--variable/ a \\t\tXML_CONFIG="$PKG_CONFIG libxml-2.0"' \
	  configure.ac

	autoreconf -fiv
	./configure --prefix=/usr --disable-static
	make
	make DESTDIR=$PKG install
}
