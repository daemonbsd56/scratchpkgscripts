# description	: OpenGL compatible 3D graphics library
# homepage	: http://mesa3d.sourceforge.net/
# maintainer	: emmett1, emmett1.2miligrams at gmail.com
# depends	: libdrm python2 wayland 
# makedepends	: python2-mako libvdpau

name=mesa
version=17.1.6
release=1
source=(https://mesa.freedesktop.org/archive/$name-$version.tar.xz)

build() {
	cd $name-$version

  	#patch -Np1 -i ../mesa-12.0.1-add_xdemos-1.patch || exit 1

	GLL_DRV="i915,svga"

	sed -i "/pthread_stubs_possible=/s/yes/no/" configure.ac
	./autogen.sh CFLAGS='-O2' CXXFLAGS='-O2'    \
	            --prefix=/usr	            \
	            --sysconfdir=/etc               \
	            --enable-texture-float          \
        	    --enable-osmesa                 \
        	    --enable-xa                     \
        	    --enable-glx-tls                \
	            --with-egl-platforms="drm,x11,wayland"  \
	            --with-gallium-drivers=$GLL_DRV
	make
	make DESTDIR=$PKG install

	install -v -dm755 $PKG/usr/share/doc/$name-$version
	cp -rfv docs/* $PKG/usr/share/doc/$name-$version
}

