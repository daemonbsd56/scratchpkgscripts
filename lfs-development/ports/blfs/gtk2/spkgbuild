# description	: GObject-based multi-platform GUI toolkit (legacy)
# homepage	: http://www.gtk.org/
# maintainer	: emmett1, emmett1.2miligrams at gmail.com
# depends	: atk gdk-pixbuf pango hicolor-icon-theme

name=gtk2
version=2.24.31
release=1
source=(http://ftp.gnome.org/pub/gnome/sources/gtk+/${version::4}/gtk+-$version.tar.xz)

build() {
	cd gtk+-$version

	sed -e 's#l \(gtk-.*\).sgml#& -o \1#' \
	    -i docs/{faq,tutorial}/Makefile.in

	./configure --prefix=/usr --sysconfdir=/etc
	make
	make DESTDIR=$PKG install

	install -d $PKG/etc/gtk-2.0
	cat > $PKG/etc/gtk-2.0/gtkrc << "EOF"
include "/usr/share/themes/Glider/gtk-2.0/gtkrc"
gtk-icon-theme-name = "hicolor"
EOF

}
