# description	: Compiler that integrates C and C++ with languages including Perl, Python, Tcl, Ruby, PHP, Java, C#, D, Go, Lua, Octave, R, Scheme, Ocaml, Modula-3, Common Lisp, and Pike
# homepage	: http://www.swig.org/
# maintainer	: emmett1, emmett1.2miligrams at gmail.com
# depends	: pcre
# makedepends	: 

name=swig
version=3.0.12
release=1
source=(http://downloads.sourceforge.net/swig/$name-$version.tar.gz)

build() {
	cd $name-$version
	./configure \
		--prefix=/usr                      \
		--without-clisp                    \
 		--without-maximum-compile-warnings
	make
	make DESTDIR=$PKG install
}

