# description	: The main C library
# homepage	: http://www.gnu.org/software/libc
# maintainer	: emmett1, emmett1.2miligrams at gmail.com
# depends	: linux-headers

name=glibc
version=2.25+adc7e06
release=1
source=(http://ftp.gnu.org/gnu/$name/$name-$version.tar.xz
	http://www.linuxfromscratch.org/patches/lfs/development/$name-$version-fhs-1.patch)

build() {
	cd $name-$version

	patch -Np1 -i ../$name-$version-fhs-1.patch || exit 1

	mkdir -p $PKG/usr/lib
	ln -sfv /tools/lib/gcc $PKG/usr/lib

	case $(uname -m) in
	    i?86)    GCC_INCDIR=/usr/lib/gcc/$(uname -m)-pc-linux-gnu/7.1.0/include
		    mkdir -p $PKG/lib
	            ln -s ld-linux.so.2 $PKG/lib/ld-lsb.so.3
	    ;;
	    x86_64) GCC_INCDIR=/usr/lib/gcc/x86_64-pc-linux-gnu/7.1.0/include
		    mkdir -p $PKG/lib64
	            ln -s ../lib/ld-linux-x86-64.so.2 $PKG/lib64
	            ln -s ../lib/ld-linux-x86-64.so.2 $PKG/lib64/ld-lsb-x86-64.so.3
	    ;;
	esac

	mkdir -v build
	cd       build

	CC="gcc -isystem $GCC_INCDIR -isystem /usr/include" \
	../configure --prefix=/usr                          \
	             --disable-werror                       \
	             --enable-kernel=2.6.32                 \
	             --enable-obsolete-rpc                  \
	             --enable-stack-protector=strong        \
	             libc_cv_slibdir=/lib
	unset GCC_INCDIR
	make
	mkdir -p $PKG/etc
	touch $PKG/etc/ld.so.conf
	make install_root=$PKG install

	cp -v ../nscd/nscd.conf $PKG/etc/nscd.conf
	mkdir -p $PKG/var/cache/nscd

	mkdir -p $PKG/usr/lib/locale

	make install_root=$PKG localedata/install-locales

	rm $PKG/usr/lib/gcc

	cat > $PKG/etc/nsswitch.conf << "EOF"
# Begin /etc/nsswitch.conf

passwd: files
group: files
shadow: files

hosts: files dns
networks: files

protocols: files
services: files
ethers: files
rpc: files

# End /etc/nsswitch.conf
EOF

cat > $PKG/etc/ld.so.conf << "EOF"
# Begin /etc/ld.so.conf
/usr/local/lib
/opt/lib

EOF

cat >> $PKG/etc/ld.so.conf << "EOF"
# Add an include directory
include /etc/ld.so.conf.d/*.conf

EOF
mkdir -p $PKG/etc/ld.so.conf.d

}