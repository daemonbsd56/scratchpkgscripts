# description	: GNU stream editor
# homepage	: https://www.gnu.org/software/sed/
# maintainer	: emmett1, emmett1.2miligrams at gmail.com
# depends	: acl attr glibc
# makedepends	: gettext

name=sed
version=4.4
release=1
source=(http://ftp.gnu.org/gnu/$name/$name-$version.tar.xz)

build() {
	cd $name-$version

	# fix an issue in the LFS environment and remove a failing test
	sed -i 's/usr/tools/'       build-aux/help2man
	sed -i 's/panic-tests.sh//' Makefile.in

	./configure --prefix=/usr --bindir=/bin
	make
	make html
	make DESTDIR=$PKG install

	install -d -m755           $PKG/usr/share/doc/$name-$version
	install -m644 doc/sed.html $PKG/usr/share/doc/$name-$version
}