# description	: XML-XCB protocol descriptions
# homepage	: http://xcb.freedesktop.org/
# maintainer	: emmett1, emmett1.2miligrams at gmail.com
# makedepends	: python3

name=xcb-proto
version=1.12
release=1
source=(http://xcb.freedesktop.org/dist/$name-$version.tar.bz2
	http://www.linuxfromscratch.org/patches/blfs/svn/$name-$version-python3-1.patch
	http://www.linuxfromscratch.org/patches/blfs/svn/$name-$version-schema-1.patch)

build() {
	cd $name-$version

	patch -Np1 -i ../$name-$version-schema-1.patch || exit 1
	patch -Np1 -i ../$name-$version-python3-1.patch || exit 1

  	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static

	make DESTDIR=$PKG install
}
