post_install() {
	fc-cache -s > /dev/null
	mkfontscale /usr/share/fonts/X11/OTF
	mkfontdir /usr/share/fonts/X11/OTF
	mkfontscale /usr/share/fonts/TTF
	mkfontdir /usr/share/fonts/TTF
}

post_remove() {
	fc-cache -s > /dev/null
	mkfontscale /usr/share/fonts/X11/OTF
	mkfontdir /usr/share/fonts/X11/OTF
	mkfontscale /usr/share/fonts/TTF
	mkfontdir /usr/share/fonts/TTF
}
