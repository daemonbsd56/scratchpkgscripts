name=initd-tools
version=0.1.3
release=1
source=(http://people.freedesktop.org/~dbn/initd-tools/releases/$name-$version.tar.gz)

build() {
	cd $name-$version
	./configure --prefix=/ --mandir=/usr/share/man
	make
	make DESTDIR=$PKG install
}
