# description	: X.org Type1 fonts
# homepage	: http://xorg.freedesktop.org/
# maintainer	: emmett1, emmett1.2miligrams at gmail.com
# depends	: encodings font-alias fontconfig

name=font-xfree86-type1
version=1.0.4
release=1
source=(http://ftp.x.org/pub/individual/font/font-xfree86-type1-$version.tar.bz2)

build() {
	cd $name-$version

  	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--libdir=/usr/lib64 \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install

	rm -fr $PKG/usr/share/fonts/X11/Type1/fonts.{dir,scale}
}

