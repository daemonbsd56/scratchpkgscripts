# description	: X11 core wire protocol and auxiliary headers
# homepage	: http://xorg.freedesktop.org/
# maintainer	: emmett1, emmett1.2miligrams at gmail.com
# makedepends	: util-macros

name=xproto
version=7.0.31
release=1
source=(http://ftp.x.org/pub/individual/proto/xproto-$version.tar.bz2)

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--libdir=/usr/lib64 \
		--localstatedir=/var \
		--disable-static

	make DESTDIR=$PKG install	
}

