# description	: KF5 based Sound Mixer application
# depends	: alsa-lib

name=kmix
version=17.08.0
release=1
source=(http://download.kde.org/stable/applications/$version/src/$name-$version.tar.xz)

build() {
	cd $name-$version
	
	mkdir build
	cd    build
	
	cmake -DCMAKE_INSTALL_PREFIX=/usr	 \
	      -DCMAKE_BUILD_TYPE=Release         \
	      -DBUILD_TESTING=OFF                \
	      -DKMIX_KF5_BUILD=1                 \
	      -Wno-dev ..
	make
	make DESTDIR=$PKG install
}
