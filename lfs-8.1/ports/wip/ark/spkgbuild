# description	: KF5 archive tool
# maintainer	: Emmett1, emmett1.2miligrams at gmail.com
# depends	: kpty kiconthemes karchive kservice ki18n kcoreaddons kwidgetsaddons kconfig qt5 gcc glibc libarchive kparts kio kitemmodels kbookmarks solid kjobwidgets kxmlgui ktextwidgets kitemviews kcompletion kconfigwidgets kcodecs kauth sonnet kcrash kdbusaddons
# makedepends	: extra-cmake-modules

name=ark
version=17.08.0
release=1
source=(http://download.kde.org/stable/applications/$version/src/$name-$version.tar.xz)

build() {
	cd $name-$version
	mkdir build
	cd    build
	
	cmake -DCMAKE_INSTALL_PREFIX=/usr \
	      -DCMAKE_BUILD_TYPE=Release         \
	      -DBUILD_TESTING=OFF                \
	      -Wno-dev ..
	make
	make DESTDIR=$PKG install
}
