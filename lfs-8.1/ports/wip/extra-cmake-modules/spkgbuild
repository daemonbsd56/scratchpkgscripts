# description	: Extra CMake modules used by KDE Frameworks 5 and other packages
# homepage	: 
# maintainer	: 
# makedepends	: cmake

name=extra-cmake-modules
version=5.37.0
release=1
source=(http://download.kde.org/stable/frameworks/${version::4}/$name-$version.tar.xz)

build() {
	cd $name-$version

	sed -i '/"lib64"/s/64//' kde-modules/KDEInstallDirs.cmake
	
	mkdir build
	cd    build
	
	cmake -DCMAKE_INSTALL_PREFIX=/usr ..
	make
	make DESTDIR=$PKG install
}
