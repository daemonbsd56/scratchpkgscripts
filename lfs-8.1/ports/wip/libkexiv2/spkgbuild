# description	: KDE wrapper around the Exiv2 library for manipulating image metadata
# homepage	: 
# maintainer	: 
# backup	: 
# conflict	: 
# depends	: exiv2
# makedepends	: 
# noextract	: 

name=libkexiv2
version=17.08.0
release=1
source=(http://download.kde.org/stable/applications/$version/src/$name-$version.tar.xz)

build() {
	cd $name-$version
	
	mkdir build
	cd    build
	
	cmake -DCMAKE_INSTALL_PREFIX=/usr	 \
	      -DCMAKE_BUILD_TYPE=Release         \
	      -DBUILD_TESTING=OFF                \
	      -Wno-dev ..
	make
	make DESTDIR=$PKG install
}
